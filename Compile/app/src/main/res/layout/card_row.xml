<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/card_row"
              android:orientation="vertical"
              android:padding="17dp"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:background="@drawable/card_background"
              android:animateLayoutChanges="true">

    
    <TextView
        android:id="@+id/card_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="2dp"
        android:animateLayoutChanges="true"/>
    <TextView
        android:id="@+id/card_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:layout_toRightOf="@id/card_first_name"
        android:animateLayoutChanges="true"/>

    <TextView
        android:id="@+id/card_extra_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:layout_toRightOf="@id/card_last_name"
        android:animateLayoutChanges="true"/>

    <TextView
        android:id="@+id/card_email_addr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:animateLayoutChanges="true"
        android:layout_below="@id/card_first_name"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

</RelativeLayout>